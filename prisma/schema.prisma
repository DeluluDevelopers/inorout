generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  FAILED
}

enum TicketTier {
  REGULAR
  VIP
  VVIP
}

model Booking {
  id             Int           @id @default(autoincrement())
  orderId        String        @unique
  paymentId      String? 
  signature      String?
  amount         Int           // stored in paise (e.g., â‚¹100 -> 10000)
  currency       String
  status         BookingStatus @default(PENDING)
  ticketTier     TicketTier    @default(REGULAR) // New field for ticket tier with default
  customerName   String?
  customerEmail  String?
  customerPhone  String?
  metadata       Json?         // can store extra info
  qrCode         String?       // QR code for verified bookings
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}
